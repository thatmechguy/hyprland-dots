/* grid-wallpaper-picker.rasi */
/* Rofi Wallpaper Picker Theme */
@import "~/.config/rofi/colors.rasi"

configuration {
    show-icons: true;
    drun-display-format: "{name}";
    font: "FiraCode Nerd Font 12";
}

window {
    location: center;
    anchor: center;
    fullscreen: false;
    width: 1200px;
    border: 2px;
    border-color: @selected;
    border-radius: 20px;
    background-color: @background;
}

mainbox {
    spacing: 10px;
    padding: 20px;
    background-color: transparent;
    children: [ "inputbar", "listview" ];
}

inputbar {
    spacing: 10px;
    margin: 0px 0px 10px 0px;
    padding: 5px 10px;
    border-radius: 10px;
    background-color: transparent;
    text-color: @selected;
    // text-color: #f8f8f2;
    children: [ "textbox-prompt-colon", "entry" ];
}
textbox-prompt-colon {
    str: "üéûÔ∏è";
    text-color: @foreground;
    expand: false;
    padding: 0px 6px 0px 0px;
    background-color: inherit;
}
entry {
    placeholder: "Search or pick wallpaper";
    placeholder-color: @selected;
    padding: 3px 0px;
    background-color: inherit;
    text-color: inherit;
}

listview {
    columns: 4;           
    lines: 2;
    flow: horizontal;
    spacing: 20px;
    padding: 10px;
    cycle: true;
    fixed-width: true;
    fixed-height: true;
    dynamic: true;
    layout: vertical;
    background-color: transparent;
}

element {
    orientation: vertical;
    spacing: 5px;
    padding: 6px;
    border-radius: 12px;
    background-color: transparent;
    text-color: @foreground;
}

element.selected {
    background-color: @selected;
    border-radius: 12px;
    text-color: inherit;
}

element-icon {
    size: 100px;             
    padding: 0px;
    margin: 2px;
    background-color: transparent;
}

element selected.normal {
    background-color:            @active;
    text-color:                  @background;
}


element-text {
    vertical-align: 0.5;
    horizontal-align: 0.5;
    padding: 10px 0px 0px 0px;
    margin: 0px;
    text-color: inherit;
    font-size: 15px;
    max-width: 180px;
    min-width: 70px;
    outline: none;
    background-color: transparent;
    highlight: @selected;
    wrap: false;
    // ellipsize: end;
}

scrollbar {
    handle-width: 5px;
    handle-color: @selected;
    border-radius: 10px;
    background-color: @background-altw;
}
